<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowAmountFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Amount"
        android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/amount"
            android:text="$100"
            android:textStyle="bold"
            android:textSize="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:layout_below="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/amount"
            android:layout_marginTop="5dp"
            android:text="Total Amount To Be Paid"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/description"
            android:layout_below="@+id/total"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Amount Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/erent"
            android:layout_below="@+id/description"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/etstyles"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="$80"
           android:padding="10dp"
          android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/rent"
            android:layout_below="@+id/description"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Rent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tex"
            android:layout_below="@+id/rent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/etax"
            android:layout_below="@+id/erent"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/etstyles"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="$20"
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
        <Button
        android:layout_marginTop="80dp"
        android:layout_width="150dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/later"
        android:text="Pay Later"
        android:layout_below="@+id/tex"
        android:layout_height="50dp"/>
        <Button
            android:layout_marginTop="80dp"
            android:layout_width="150dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:id="@+id/now"
            android:text="Pay Now"
            android:layout_below="@+id/tex"
            android:layout_height="50dp"/>
    </RelativeLayout>
</FrameLayout>