<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewCarDetailsFragment">

    <!-- TODO: Update blank fragment layout -->
<ScrollView
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/name"
        android:text=" Jaguar "
        android:textStyle="bold"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:background="@drawable/etstyles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/img"
        android:layout_below="@+id/name"
        android:src="@drawable/carf"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>
    <TextView
        android:id="@+id/des"
        android:text="Description"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/cost"
        android:text="$75/hour"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:layout_below="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/description"
        android:text=" Audi A4 Specifications and Features including dimensions, engine capacity (cc), fuel"
        android:layout_marginTop="10dp"
          android:padding="20dp"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/etstyles"
        android:layout_below="@+id/des"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/spec"
        android:layout_below="@+id/description"
        android:text="Specification"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/seat"
        android:layout_below="@+id/spec"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="4 Seats"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/door"
        android:layout_below="@+id/spec"
        android:layout_alignParentRight="true"
        android:layout_marginRight="90dp"
        android:layout_marginTop="10dp"
        android:text="4 Doors"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/ac"
        android:layout_below="@+id/seat"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Air Conditioning"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/type"
        android:layout_below="@+id/door"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:text="Automatic"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
   <TextView
       android:id="@+id/cancel"
       android:layout_below="@+id/ac"
       android:layout_marginTop="10dp"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       android:textSize="20sp"
       android:textStyle="bold"
       android:drawableLeft="@drawable/ic_done_all_black_24dp"
       android:text=" Free Cancellization"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>
    <Button
        android:id="@+id/checkout"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
       android:text="Checkout"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/cancel"
        android:layout_height="70dp"/>


</RelativeLayout>
</ScrollView>

</FrameLayout>